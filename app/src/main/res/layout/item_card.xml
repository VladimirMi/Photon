<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical"
                                             app:layout_constraintDimensionRatio="w,1:1"
    >

    <ImageView
        android:id="@+id/photo_card"
        android:layout_width="368dp"
        android:layout_height="0dp"
        tools:background="@color/color_accent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/card_gradient"
        app:layout_constraintBottom_toBottomOf="@+id/photo_card"
        android:padding="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        >

        <ImageView
            android:id="@+id/icon_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_card_like"
            />

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            tools:text="73"
            />

        <ImageView
            android:id="@+id/icon_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_card_view"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            />

        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            tools:text="73"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>