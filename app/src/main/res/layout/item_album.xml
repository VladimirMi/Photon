<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="180dp"
    tools:ignore="RtlHardcoded, ContentDescription"
    >

    <ImageView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/splash"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/album_gradient"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/album_name"
            style="@style/CustomText.White"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            tools:text="Избранное"
            />

        <TextView
            android:id="@+id/card"
            style="@style/CustomText.White"
            android:layout_below="@id/album_name"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/photocard_card"
            />

        <TextView
            android:id="@+id/card_count"
            style="@style/CustomText.White"
            android:layout_below="@id/card"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            tools:text="7"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/icon_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_card_like"
                />

            <TextView
                android:id="@+id/likes"
                style="@style/CustomText.White"
                android:layout_marginLeft="16dp"
                android:textSize="12sp"
                tools:text="73"
                />

            <ImageView
                android:id="@+id/icon_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                app:srcCompat="@drawable/ic_card_view"
                />

            <TextView
                android:id="@+id/views"
                style="@style/CustomText.White"
                android:layout_marginLeft="16dp"
                android:textSize="12sp"
                tools:text="73"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>