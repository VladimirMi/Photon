<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/view_filters"
    >

    <TextView
        style="@style/CustomText.Black"
        android:layout_gravity="center"
        android:text="@string/filters_dish"
        android:layout_marginBottom="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:tag="dish"
        >

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_dish_meat"
            android:drawableTop="@drawable/ic_dish_meat"
            style="@style/FilterElement"
            android:tag="meat"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_dish_fish"
            android:drawableTop="@drawable/ic_dish_fish"
            style="@style/FilterElement"
            android:tag="fish"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_dish_vegetable"
            android:drawableTop="@drawable/ic_dish_vegetables"
            style="@style/FilterElement"
            android:tag="vegetables"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_dish_fruit"
            android:drawableTop="@drawable/ic_dish_fruit"
            style="@style/FilterElement"
            android:tag="fruit"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_dish_cheese"
            android:drawableTop="@drawable/ic_dish_cheese"
            style="@style/FilterElement"
            android:tag="cheese"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_dish_dessert"
            android:drawableTop="@drawable/ic_dish_desserts"
            style="@style/FilterElement"
            android:tag="dessert"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_dish_drink"
            android:drawableTop="@drawable/ic_dish_drinks"
            style="@style/FilterElement"
            android:tag="drinks"
            />

    </LinearLayout>
</merge>