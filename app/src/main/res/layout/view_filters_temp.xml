<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/view_filters"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filters_temp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginBottom="24dp"
        android:tag="temperature"
        >

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_temp_hot"
            android:drawableTop="@drawable/ic_temp_hot"
            style="@style/FilterElement"
            android:tag="hot"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_temp_normal"
            android:drawableTop="@drawable/ic_temp_normal"
            style="@style/FilterElement"
            android:tag="middle"
            />

        <io.github.vladimirmi.photon.ui.FilterElementView
            android:text="@string/filters_temp_cold"
            android:drawableTop="@drawable/ic_temp_cold"
            style="@style/FilterElement"
            android:tag="cold"
            />
    </LinearLayout>
</merge>